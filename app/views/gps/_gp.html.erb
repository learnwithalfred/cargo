<div id="<%= dom_id gp %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Container no:</strong>
    <%= gp.container_no %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= gp.weight %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vehicle reg:</strong>
    <%= gp.vehicle_reg %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Hauller:</strong>
    <%= gp.hauller %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is approved:</strong>
    <%= gp.is_approved %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= gp.customer %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date in:</strong>
    <%= gp.date_in %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date out:</strong>
    <%= gp.date_out %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Line:</strong>
    <%= gp.line %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Size:</strong>
    <%= gp.size %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Depot:</strong>
    <%= gp.depot %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Sheet:</strong>
    <%= gp.sheet %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this gp", gp, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this gp', edit_gp_path(gp), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
